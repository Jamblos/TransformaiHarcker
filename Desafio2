import java.util.Random;
import java.util.Scanner;

/**
 *
 * @author Jansen da Silva Almeida Costa
 */
public class Desafio2 {   
    public static void main (String [] args){
        Random  rand = new Random ();
        int  randNumb = rand.nextInt (10);
        randNumb+=1;
        Scanner teclado = new Scanner (System.in);
          
          System.out.println("\tAdivinhe o Numero que estou pensando!");
          System.out.println("Dica: Estou pensando em um numero entro 1 e 50 ");
          int tentativa = teclado.nextInt();
        if (randNumb == tentativa){
            System.out.println("VC acertou!!");
            System.out.println("O numero era realmente: "+randNumb);
        }   
        else{ 
            System.out.println("Que pena,vc errou :(");
            System.out.println ("O valor era:" + randNumb); 
            
        }
    }
               

}
